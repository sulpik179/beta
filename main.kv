<DictionaryScreen>:
    name: 'dictionary'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Main'
            size_hint_y: None
            height: 50
            font_name: 'JetBrainsMono'
            on_press: app.root.current = 'main'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                id: dict_layout

<FlashcardScreenManager>:
    MainScreen:
        name: 'main'
    LearnScreen:
        name: 'learn'
    PracticeScreen:
        name: 'practice'
    DictionaryScreen:
        name: 'dictionary'